{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES2022"
    ],
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "commonjs",
    }
  },
  "include": [
    "**/*.ts"
  ]
}
